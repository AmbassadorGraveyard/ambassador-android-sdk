<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Twitter Post"
        android:id="@+id/twitterHeadline"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="@color/twitter_blue" />

    <com.example.ambassador.ambassadorsdk.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etTweetMessage"
        android:backgroundTint="@color/twitter_blue"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="24dp"
        android:editable="true"
        android:layout_below="@+id/twitterPost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textCursorDrawable="@null"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:textColor="@color/twitter_blue"
        android:layout_alignTop="@+id/btnTweet"
        android:layout_toStartOf="@+id/btnTweet"
        android:layout_marginBottom="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Tweet"
        android:id="@+id/btnTweet"
        android:layout_below="@+id/etTweetMessage"
        android:layout_alignEnd="@+id/etTweetMessage"
        android:textColor="@color/twitter_blue"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadingPanel"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:backgroundTint="@color/twitter_blue" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/twitter_icon"
        android:layout_alignBottom="@+id/twitterHeadline"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tweet"
        android:id="@+id/twitterPost"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />
</RelativeLayout>