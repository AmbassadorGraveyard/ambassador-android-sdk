<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/rlMainLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Spread the word"
        android:id="@+id/tvWelcomeTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Refer a friend to get a reward"
        android:id="@+id/tvWelcomeDesc"
        android:layout_below="@+id/tvWelcomeTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <com.example.ambassador.ambassadorsdk.CustomEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etShortURL"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/tvWelcomeDesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:editable="false"
        android:clickable="true" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gvSocialGrid"
        android:layout_below="@+id/etShortURL"
        android:layout_alignParentBottom="true"
        android:stackFromBottom="false"
        android:transitionGroup="false"
        android:columnWidth="80dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:clickable="true" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/btnCopyPaste"
        android:src="@drawable/copy_paste_icon"
        android:background="#00ffffff"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/etShortURL"
        android:layout_alignRight="@+id/etShortURL"
        android:layout_alignEnd="@+id/etShortURL"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>
